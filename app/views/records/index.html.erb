<div class="container">
<h1>Tank Records</h1>
 
 <%= button_to 'New Record', new_record_path, :class => "button", :method => :get %><p>
<table>
  <tr>
    <th>Date</th>
    <th><%= link_to  "pH",  welcome_ph_path%></th>
    <th><%= link_to  "Ammonia",  welcome_ammonia_path%></th>
    <th><%= link_to  "Nitrite",  welcome_nitrite_path%></th>
    <th><%= link_to  "Nitrate",  welcome_nitrate_path%></th>
    <th><%= link_to  "KH",  welcome_kh_path%></th>
    <th><%= link_to  "GH",  welcome_gh_path%></th>
    <th><%= link_to  "Tank Events",  welcome_tankevents_path%></th>

  </tr>
 
  <% @record.each do |t| %>
    <tr>
      <td><%= formatted_date(t.date) %></td>
      <td><%= t.ph %></td>
      <td><%= t.ammonia %></td>
      <td><%= t.nitrite %></td>
      <td><%= t.nitrate %></td>
      <td><%= t.kh %></td>
      <td><%= t.gh %></td>
      <td><%= t.notes %></td>
      <td><%= button_to 'Show', t, method: :get %></td>
      <td><%= button_to 'Edit', edit_record_path(t), method: :get %></td>
      <td><%= button_to 'Destroy', t, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></td>
    </tr>
  <% end %>
</table>
<br>
 
</div>